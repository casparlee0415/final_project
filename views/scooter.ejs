<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>詳細資訊</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/scooter_styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container px-5">
                <!-- <a class="navbar-brand" href="#!">Start Bootstrap</a> -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/">Home</a></li>
                        <li class="nav-item">
                            <form action="/brand" method="post">
                                <input type="hidden" id='<%= brand_name%>' name="brand_name" value="<%= brand_name%>">
                                <a class="nav-link" href="javascript:void(0)" onclick="parentNode.submit()">回到機車選單</a>
                            </form>
                        </li>
                        <!-- <li class="nav-item"><a class="nav-link" href="#!">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="#!">Services</a></li> -->
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page Content-->
        <div class="container px-4 px-lg-5">
            <!-- Heading Row-->
            <div class="row gx-4 gx-lg-5 align-items-center my-5">
                <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="img/scooter/<%= data.scooter_name %>.jpeg" alt="..." /></div>
                <div class="col-lg-5">
                    <h1 class="font-weight-light"><%= data.scooter_name %></h1>
                    <p><br>車型：<%= data.scooter_type %></p>
                    <p>排氣量：<%= data.displacement %></p>
                    <p>價格：<%= data.price %>萬</p>
                    <!-- <a class="btn btn-primary" href="#!">Call to Action!</a> -->
                </div>
            </div>
            <!-- Call to Action-->
            <div class="card text-white bg-secondary my-5 py-4 text-center">
                <div class="card-body"><p class="text-white m-0"><%= data.engine_type %><br><%= data.transmission %><br>性能：<%= data.performance %></p></div>
            </div>
            <!-- Content Row-->
            <div class="row gx-4 gx-lg-5">
                <% for(var i=0;i < results.length;i++){%>
                    <div class="col-md-4 mb-5">
                        <div class="card h-100">
                            <div class="card-body">
                                <h2 class="card-title"><%= results[i].scooter_name %></h2>
                                <img src="/img/scooter/<%= results[i].scooter_name %>.jpeg" width="250px" alt="">
                                <!-- <p class="card-text"></p> -->
                            </div>
                            <div class="card-footer">
                                <form action='/scooter' method="post">
                                    <input type='hidden' id='<%= results[i].scooter_name %>' name="scooter_name" value='<%= results[i].scooter_name %>'>
                                    <input type='hidden' id='<%= brand_name %>' name="brand_name" value='<%= brand_name %>'>
                                    <a class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="parentNode.submit()">More Info</a>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container px-4 px-lg-5"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/js/scripts.js"></script>
    </body>
</html>